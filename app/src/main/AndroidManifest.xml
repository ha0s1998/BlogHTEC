<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bloghtec">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".app.MyApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlogHTEC">
        <activity android:name="com.example.bloghtec.ui.activities.AllPostsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.bloghtec.ui.activities.MainActivity"></activity>
        <activity android:name="com.example.bloghtec.ui.activities.PostActivity" android:parentActivityName="com.example.bloghtec.ui.activities.AllPostsActivity"></activity>

    </application>

</manifest>